		SELECT c.id, nm.newsgroup, u.email, u.firstname
		FROM {course} c
		JOIN {newsmod} nm ON nm.course = c.id
		JOIN {context} ct ON c.id = ct.instanceid
		JOIN {role_assignments} ra ON ra.contextid = ct.id
		JOIN {user} u ON u.id = ra.userid
