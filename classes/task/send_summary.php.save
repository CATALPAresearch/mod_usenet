			$summarytext = $summarytext . "\r\n\r\n<hr size=1 noshade=noshade />";
			$summarytext = $summarytext . $newsgr->newsgroup."\r\n<ul>";
			}
			
			$enrolledd = $DB->get_record_sql("
			SELECT cm.id, nm.newsgroup FROM mdl_modules c
			JOIN mdl_course_modules cm ON cm.module = c.id
			join mdl_newsmod nm ON nm.id = cm.instance
			WHERE c.name = 'newsmod' AND nm.newsgroup = $newsgr->newsgroup");

			foreach($cachesummary[$newsgr->newsgroup] as $message){
//			$summarytext = $summarytext ."\r\n<BR>".$message->subject;


		$summarytext = $summarytext .  '<a class="searcher" href="'.$httppos .'/mod/newsmod/view.php?id='. $newsgr->id .'&msgnr='. $message->uid .'">';
		$summarytext = $summarytext . '<li class="node">';
		//$summarytext = $summarytext .  '<svg width="100" height="100" data-jdenticon-value=">';
		$tempheader->sender=imap_rfc822_parse_adrlist($message->from,'');
		//print_r(new moodle_url("/mod/newsmod/messageid.php?id=" . $newsgr->id . "&msgnr=" . $message->uid));
		$summarytext = $summarytext . '<div><div>'. htmlspecialchars($message->subject);
		$summarytext = $summarytext .  $tempheader->sender[0]->mailbox."@".$tempheader->sender[0]->host;
		$summarytext = $summarytext . '</div><div>'.$tempheader->personal;
